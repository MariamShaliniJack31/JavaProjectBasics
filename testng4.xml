<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!--  The "groups" is inside the suite tag, it will run all the tests in the XML file -->

<suite name="test_suite">
	<groups>
		<define name = "SuperGroup">
   			<include name = "SmokeTest"></include>
   		</define>
		<run>
			<include name = "SuperGroup" />
		</run>
	</groups>
	
	<test name="Personal Loan">
		<classes>
			<class name="TestNG_Grouping.Personal_loan" />
		</classes>
	</test> <!-- Test -->
	
	<test name="Home Loan">
		<classes>
			<class name="TestNG_Grouping.Home_loan" />
		</classes>
	</test> <!-- Test -->
	
	<test name="Car Loan">
		<classes>
			<class name="TestNG_Grouping.Car_loan" />
		</classes>
	</test> <!-- Test -->
	
</suite> <!-- Suite -->  