<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="test_suite">

<!-- The groups is inside the Personal Loan test and it will work only inside the test tag with the name Personal Loan. -->

	<test name="Personal Loan">
		<groups>
			<run>
				<include name="SmokeTest" />
			</run>
		</groups>
		<classes>
			<class name="TestNG_Grouping.Personal_loan" />
		</classes>
	</test> <!-- Test -->

	<test name="Home Loan">
		<classes>
			<class name="TestNG_Grouping.Home_loan" />
		</classes>
	</test> <!-- Test -->

	<test name="Car Loan">
		<classes>
			<class name="TestNG_Grouping.Car_loan" />
		</classes>
	</test> <!-- Test -->

</suite> <!-- Suite -->  